<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget>
	<name>camerazoom</name>
	<label>Zooming Camera</label>
	<description>IP Camera stream viewer that opens on activity</description>
	<version>1.0</version>
	<category>Camera widgets</category>
	<settings>
		<setting id="icon-picture" label="Icon picture" type="picture"/>
		<setting id="stream-type" label="Stream type" type="list" default="img">
			<option key="img" value="Image (MJPEG)" />
			<option key="webm" value="Webm stream" />
			<option key="mp4" value="MP4 stream" />
			<option key="ogg" value="OGG stream" />
		</setting>
		<setting id="stream-url" label="Stream URL" type="text" /> <!--(placeholder <width> and <height>)-->
		<setting id="supported-resolutions" label="Supported Resolutions" type="text" /> <!--(syntax e.g. [[320,240],[640,480]])-->
		<setting id="resx" label="Default Video Width" type="text" />
		<setting id="resy" label="Default Video Height" type="text" />
		<setting id="activity-object" label="Activity object" type="object"/>
		<setting id="unlock-object" label="Unlock object" type="object"/>
	</settings>
	<feedbacks>
		<feedback id="activity-object" />
	</feedbacks>
</widget>
